{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",

    "ignoreDeprecations": "6.0",

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}

