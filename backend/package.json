{
  "name": "careerwave-backend",
  "version": "1.0.0",
  "description": "CareerWave Backend API mit Bun und Elysia",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "elysia": "^1.4.16",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "firebase-admin": "^13.6.0",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "bun-types": "latest",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "bun",
    "elysia",
    "typescript",
    "api",
    "job-board",
    "firebase"
  ],
  "author": "CareerWave Team",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  }
}
